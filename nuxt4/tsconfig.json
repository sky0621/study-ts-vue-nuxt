{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,

    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "@types/node",
      "@nuxt/types"
    ],
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "allowJs": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules"
  ]
}
